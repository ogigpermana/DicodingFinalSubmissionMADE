<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ogi.submission4.moviereview">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name="com.ogi.submission4.moviereview.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.ogi.submission4.moviereview.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".view.SplashActivity" android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.info.AboutActivity" />

        <receiver android:name=".view.widgets.MovieReviewWidget">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/movie_review_widget_info" />
        </receiver>

        <activity android:name=".view.activities.settings.SettingActivity" />
        <activity android:name=".view.activities.tv.TvShowSearchActivity" />
        <activity android:name=".view.activities.movie.MovieSearchActivity" />
        <activity android:name=".view.activities.tv.TvShowDetailActivity" />
        <activity android:name=".view.activities.movie.MovieDetailActivity" />
        <activity
            android:name=".view.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <service
            android:name=".services.MovieReviewWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS" />

        <provider
            android:name=".provider.MovieProvider"
            android:authorities="com.ogi.submission4.moviereview"
            android:exported="true"
            android:readPermission="com.ogi.submission4.moviereview.READ_DATABASE"
            android:writePermission="com.ogi.submission4.WRITE_DATABASE" />

        <provider
            android:name=".provider.TvShowProvider"
            android:authorities="com.ogi.submission4.moviereview"
            android:exported="true"
            android:readPermission="com.ogi.submission4.moviereview.READ_DATABASE"
            android:writePermission="com.ogi.submission4.WRITE_DATABASE" />

        <receiver
            android:name=".services.MovieReviewDailyReminder"
            android:enabled="true"
            android:exported="false" />
        <receiver
            android:name=".services.MovieReviewNewReleaseReminder"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>